{
  "name": "core-ai-techradar",
  "version": "0.4.1",
  "description": "Techradar to track AI technology assessments",
  "homepage": "https://github.com/DEFRA/aiunit-tech-radar",
  "main": "app/index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "build": "webpack",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js,njk --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/data-tables": "^13.2.2",
    "@azure/identity": "^4.0.1",
    "@hapi/hapi": "21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "applicationinsights": "2.9.1",
    "bootstrap": "^5.3.2",
    "d3": "^7.8.5",
    "hapi-pino": "^12.1.0",
    "joi": "^17.12.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "postcss-loader": "^8.1.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.1.0",
    "standard": "17.1.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ],
    "ignore": [
      "**/dist/**",
      "**/frontend/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
